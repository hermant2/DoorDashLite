<resources>

    <style name="Widget.DoorDashLite.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="background">@color/color_white</item>
    </style>

    <style name="Widget.DoorDashLite.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/color_red</item>
        <item name="elevation">4dp</item>
        <item name="titleTextColor">@color/color_white</item>
        <item name="titleTextStyle">@style/Widget.DoorDashLite.TextView.ToolbarTitle</item>
    </style>

    <style name="Widget.DoorDashLite.SelectableCardView" parent="Widget.DoorDashLite.CardView">
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="Widget.DoorDashLite.TextView.ToolbarTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.DoorDashLite.TextView.Label" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_dark_grey</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.DoorDashLite.TextView.Paragraph" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_dark_grey</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="Widget.DoorDashLite.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/color_red</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Widget.DoorDashLite.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
    </style>
</resources>